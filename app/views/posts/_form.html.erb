
<%= form_for @post do |f| %>

  <div class='control-group' > 
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class='control-group' > 
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class='control-group' > 
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, class: 'span6' %>
  </div>

<div class='control-group'>
  <%#= f.label "Categories" %>
  Categories:
  <br /> 
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <span class='checkbox_span'>
      <%= cb.label( class: "checkbox inline") 
      (cb.check_box(class: "checkbox") + cb.text) %> 
    </span>
  <% end %>
</div>

<br />
<br />

<div class='action'>
  <%= f.submit %>
</div>

<% end %>