<%= render 'shared/title_format', title: 'Login' %>


<div class='well'>
  <%= form_tag '/login' do %>

    <div class='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>

    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil,  {placeholder: 'password'}  %>
    </div>

    <div class='action'>
      <%= submit_tag 'Log in', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>