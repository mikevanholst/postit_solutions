<% if obj.errors.any? %>
  <div class='row'></div>
    <div class='alert alert-error span8'>
      
        <h4>Please correct the following <%= pluralize(obj.errors.count, 'error') %>:</h4>
        <% obj.errors.full_messages.each do |msg| %>
          <ul>
            <li><%= msg %></li>
          </ul>
        <% end %>      
    </div>
</div>
<% end %>