<%= render 'shared/errors', obj: @user %>

<div class='well'>
  <%= form_for @user do |f| %>
    <div class='control-group' >
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
      
    <div class='control-group'>
     <%= f.label :password, ( controller.action_name == 'new' ? "Password" : 'Enter a new password' ) %>
      <%= f.password_field :password %>
        
    </div>

    <div class='action'>
       <% if controller.action_name == 'new' %>
      <%= f.submit "Register", class: 'btn btn-success'%>
      <% else %>
        <%= f.submit "Update Profile", class: 'btn btn-success'%>
      <% end %>

    </div>
  <% end %>
</div>